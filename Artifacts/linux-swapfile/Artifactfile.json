{
    "$schema": "https://raw.githubusercontent.com/Azure/azure-devtestlab/master/schemas/2015-01-01/dtlArtifacts.json",
    "title": "Swap file",
    "description": "Configure swap file on Linux",
    "tags": [
	   "Linux"
    ],
    "iconUri": "",
    "targetOsType": "Linux",
    "parameters": {
        "size": {
            "type": "string",
            "displayName": "Size",
            "description": "The size of the swap file in bytes.  Suffixes k, m, g, t, p, or e correspond to KiB, MiB, GiB, etc. Example: 5g = 5GiB, 100m = 100MiB",
            "allowEmpty": false,
            "defaultValue": "1g"
        }
    },
    "runCommand": {
            "commandToExecute": "[concat('sh linux_swapfile.sh ', parameters('size'))]"
    }
}
