{
    "$schema": "https://raw.githubusercontent.com/Azure/azure-devtestlab/master/schemas/2015-01-01/dtlArtifacts.json",
    "title": "Docker Container",
    "description": "Use this to install a Docker container on Linux",
    "tags": [
        "Docker",
        "Linux",
        "Container"
    ],
    "iconUri": "https://www.docker.com/sites/default/files/legal/small_v.png",
    "targetOsType": "Linux",
    "parameters": {
        "name": {
            "type": "string",
            "displayName": "Name",
            "description": "The name of the container."
        },
        "image": {
            "type": "string",
            "displayName": "Image",
            "description": "The name of the Docker image to be installed, for example: Jenkins."
        },
        "commandLineArgs": {
            "type": "string",
            "displayName": "Arguments",
            "description": "Any additional command-line arguments."
        }
    },
    "runCommand": {
        "commandToExecute": "[concat('sh linux_install_docker_container.sh', ' ', parameters('name'), ' ', parameters('image'), ' ', parameters('commandLineArgs'))]"
    }
}